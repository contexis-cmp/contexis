name: SLSA GoReleaser
on:
  workflow_dispatch:
  release:
    types: [created]
permissions: read-all
jobs:
  build:
    permissions:
      id-token: write
      contents: write
      actions: read
    uses: slsa-framework/slsa-github-generator/.github/workflows/builder_goreleaser_slsa3.yml@v1.4.0
    with:
      goreleaser-version: v2.0.0       # choose your GoReleaser version
      goreleaser-config: .goreleaser.yaml
      goreleaser-args: release --clean
