name: "invalid-name-with-special-chars!@#"
version: "1.0.0"
description: "Conversational agent for invalid-name-with-special-chars!@#"

role:
  persona: "Professional, helpful conversational assistant"
  capabilities: [conversation tool_usage memory_retention context_awareness]
  limitations: [no_personal_data no_harmful_content no_unauthorized_access]

tools:

  - name: "web_search"
    uri: "mcp://web.search"
    description: "Search the web for current information"


guardrails:
  tone: "professional"
  format: "json"
  max_tokens: 500
  temperature: 0.1
  
memory:
  type: "episodic"
  max_history: 10
  privacy: "user_isolated"

testing:
  drift_threshold: 0.85
  business_rules:

    - "always_helpful"

    - "professional_tone"

    - "tool_security"

    - "memory_privacy"

